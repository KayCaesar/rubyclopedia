-if user_signed_in?
 %li{:style=>"color:white"}
  =link_to('Submit an article', new_submission_path)
 %li
  = link_to('Logout', destroy_user_session_path, method: :delete)
 %li{:style=>"color:white"}
  ="Logged in as #{current_user.username}"
 - if current_user.superuser
  %li{:style=>"color:white"}
   = link_to('Articles', admin_articles_path)
  %li{:style=>"color:white"}
   = link_to('Submissions', admin_submissions_path)
 - else
  %li{:style=>"color:white"}
   = link_to('My profile', :controller => :users, :action => :show, :username => current_user.username)
-else
 %li
  = link_to('Login', new_user_session_path)