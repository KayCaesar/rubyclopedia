  </div>
  <div class="field">
    <%= f.label :supplier_ref %><br>
    <%= f.number_field :supplier_ref %>
  </div>
  <div class="field">
    <%= f.label :video_link %><br>
    <%= f.text_field :video_link %>
  </div>
  <div class="field">
    <%= f.label :free %><br>
    <%= f.check_box :free %>
  </div>
